<h1>Sign Up</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div><%= f.label :name %><br />
  <%= f.text_field :name ,class: 'form-control'%></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true ,class: 'form-control'%></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password,class: 'form-control' %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation ,class: 'form-control'%></div>

  <div><%= f.label :rowner, "Restaurant Owner" %>
  <%= f.check_box :rowner %></div></br>

  <div><%= f.submit "Sign up" ,class: "btn btn-primary"%></div>
<% end %>

<%= render "users/shared/links" %>
</div>
</div>
